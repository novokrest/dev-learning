@model Razor.Models.Product

@{
    ViewBag.Title = "DemoExpression";
}

<h2>DemoExpression</h2>

<table>
    <thead>
        <tr>
        <th>Property</th>
        <th>Value</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Name</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Price</td>
            <td>
                @if (Model.Price == 0)
                {
                    @: Free
                }
                else
                {
                    @Model.Price
                }
            </td>
        </tr>
        <tr>
            <td>Stock Level</td>
            <td>
                @switch ((int)ViewBag.ProductCount) {
                    case 0:
                        @: Out of Stock
                        break;
                    case 1:
                        <b>Low Stock (@ViewBag.ProductCount)</b>
                        break;
                    default:
                        @ViewBag.ProductCoumt
                        break;
                }
            </td>
        </tr>
    </tbody>
</table>

<div data-discount="@ViewBag.ApplyDiscount"
     data-express="@ViewBag.ExpressShip"
     data-supplier="@ViewBag.Supplier">
    The containing element has data attributes
</div>

<p>Discount: <input type="checkbox" checked="@ViewBag.ApplyDiscount"></p>
<p>Express: <input type="checkbox" checked="@ViewBag.ExpressShip"></p>
<p>Supplier: <input type="checkbox" checked="@ViewBag.Supplier"></p>

